pipeline {
    agent any
    stages {
        stage('Prepare') {
            steps {
                git url: "https://lab.ssafy.com/s09-webmobile1-sub2/S09P12A502.git",
                    branch: 'dev',
                    credentialsId: 'gitlab'
            }

            post {
                success {
                    echo 'Successfully Cloned Repository'
                }
            }
        }
        
        stage('.yml Setting'){
            steps{
                sshagent(['ec2-server']){
                    sh """
                        ssh -o StrictHostKeyChecking=no -f ubuntu@i9a502.p.ssafy.io 'cp /home/ubuntu/application-setting-files/application.yml ./moyeolam-be/src/main/resources/'
                        ssh -o StrictHostKeyChecking=no -f ubuntu@i9a502.p.ssafy.io 'cp /home/ubuntu/application-setting-files/application-local.yml ./moyeolam-be/src/main/resources/'
                    """
                }
            }
        }
        
        stage('Build'){
            steps{
                sh """
                    cd moyeolam-be                    
                    chmod +x gradlew
                    ./gradlew clean build
                """
            }
        }
        stage('Deploy'){
            steps{
                sshagent(['ec2-server']){
                    sh """
                        scp ./moyeolam-be/build/libs/moyeolam-0.0.1-SNAPSHOT.jar ubuntu@i9a502.p.ssafy.io:/home/ubuntu
                        ssh -o StrictHostKeyChecking=no -f ubuntu@i9a502.p.ssafy.io 'fuser -k -n tcp 8080'
                        ssh -o StrictHostKeyChecking=no -f ubuntu@i9a502.p.ssafy.io 'java -jar moyeolam-0.0.1-SNAPSHOT.jar'
                    """
                }
            }
        }
    }
}
